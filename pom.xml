    <modules>
        <module>ai-master-boot</module>
        <module>ai-master-service</module>
        <module>ai-master-infrastructure</module>
        <module>ai-master-application</module>
        <module>ai-master-domain</module>
        <module>ai-master-common</module>
        <module>ai-master-client</module>
        <module>ai-master-api</module>
    </modules>
    
    <dependencyManagement>
        <dependencies>
            <!-- ======= -->
