                <groupId>ai-master</groupId>
                <artifactId>ai-master-service</artifactId>
                <version>${revision}</version>
            </dependency>
            <dependency>
                <groupId>ai-master</groupId>
                <artifactId>ai-master-infrastructure</artifactId>
                <version>${revision}</version>
            </dependency>
            <dependency>
                <groupId>ai-master</groupId>
                <artifactId>ai-master-application</artifactId>
                <version>${revision}</version>
            </dependency>
            <dependency>
                <groupId>ai-master</groupId>
                <artifactId>ai-master-domain</artifactId>
                <version>${revision}</version>
            </dependency>
            <dependency>
                <groupId>ai-master</groupId>
                <artifactId>ai-master-common</artifactId>
                <version>${revision}</version>
            </dependency>
            <dependency>
                <groupId>ai-master</groupId>
                <artifactId>ai-master-api</artifactId>
                <version>${revision}</version>
            </dependency>
            <dependency>
                <groupId>ai-master</groupId>
                <artifactId>ai-master-client</artifactId>
                <version>${revision}</version>
            </dependency>

            <!-- ======= -->
            <!-- 二方依赖 -->
            <!-- ======= -->
            <dependency>
                <groupId>com.transformer</groupId>
                <artifactId>transformer-call</artifactId>
                <version>${transformer.version}</version>
            </dependency>
            <dependency>
                <groupId>com.transformer</groupId>
                <artifactId>transformer-common</artifactId>
                <version>${transformer.version}</version>
            </dependency>
            <dependency>
                <groupId>com.transformer</groupId>
                <artifactId>transformer-dubbo</artifactId>
                <version>${transformer.version}</version>
            </dependency>
            <dependency>
                <groupId>com.transformer</groupId>
                <artifactId>transformer-util</artifactId>
                <version>${transformer.version}</version>
            </dependency>
            <dependency>
                <groupId>com.transformer</groupId>
                <artifactId>transformer-exception</artifactId>
                <version>${transformer.version}</version>
            </dependency>
            <dependency>
                <groupId>com.transformer</groupId>
                <artifactId>transformer-dao</artifactId>
                <version>${transformer.version}</version>
            </dependency>
<!--            <dependency>-->
<!--                <groupId>com.transformer</groupId>-->
<!--                <artifactId>transformer-context</artifactId>-->
<!--            </dependency>-->
